<% include ../partials/header %>

<!--Shop Page-->

<div class="container">
    <h1>Look at all of this cool merchandise you can get!</h1>
    <p>Your Avatar:<img class="avatarImage" src="<%=currentUser.avatar%>"></img></p>
    <h4>You have <%=currentUser.coins%> <img class="coinImage" src="http://www.free-icons-download.net/images/question-mark-gold-coin-icon-34507.png"></h4>
    
    <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <%items.forEach(function(item){%>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail rounded">
                    <div class="caption">
                        <h5 class="itemDisplay"><%=item.name%></h5>
                        <h5 class="itemDisplay">This costs <%=item.cost%><img class="coinImage" src="http://www.free-icons-download.net/images/question-mark-gold-coin-icon-34507.png"></h5>
                        <img class="itemDisplay" src="<%=item.image%>">
                    </div>
                </div>
            </div>
        <%})%>
    </div>
</div>



<% include ../partials/footer %>