<% include ../partials/header %>
<% include ./main %>


<!--Results Page-->



<div class="container">
    <div class="container questionTitle">
        <h1>Congratulations <%=currentUser.username%></h1>
    </div>
    <div>
        <h4>You've voted <%= getAnswer()%> to <%=question.title%></h4>
    </div>
    <div>
        <h4>Current Vote Tally</h4>
        <ul class="answerList">
            <% question.answers.forEach(function(answer, index){ %>
               <li><%=answer[0]%> : <%=answer[1]%></li>
            <% }) %>
        </ul>
    </div>
    <div>
       <a href="/questions">Click here to go back to the Questions Page</a>
    </div>
    <%if(question.author!==undefined){%>
        <div>This Question was created by <%=question.author.username%></div>
    <% } %>
</div>




<% include ../partials/footer %>
