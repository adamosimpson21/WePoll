<% include ../partials/header %>




<div class="container">
    <div class="container questionTitle">
        <h1><%=question.title%></h1>
    </div>
    <div>
        <h1><%=question.questionContent%></h1>
    </div>
    <div>
        <form action="/questions/<%=question._id%>" method="POST">
            <ul class="answerList">
                <% question.answers.forEach(function(answer){ %>
                    <div class="container">
                        <div>
                            <!--%=console.log(question)%>-->
                            <li><button class="btn btn-large btn-primary answerDisplay"><%=answer.text%></button></li>
                        </div>
                    </div>
                <% }) %>
            </ul>
            <div id="questionAnswered">
                <!--Show Submit after Q answered-->
                <button class="questionSubmit">Lock It In!</button>
            </div>
        </form>
    </div>
</div>


<% include ../partials/footer %>

